<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Login","DangNhap", "DangNhap")*@

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Dash Board", "Index", "DashBoard")</li>*@
                    @if (Session["Account"] != null)
                    {

                        <li>@Html.ActionLink("Dash Board", "Index", "DashBoard")</li>
                        <li>@Html.ActionLink("Car Brand", "Index", "CarBrands")</li>
                        <li>@Html.ActionLink("Car Model", "Index", "CarModels")</li>
                        <li>@Html.ActionLink("City", "Index", "Cities")</li>
                        <li>@Html.ActionLink("Review", "Index", "Reviews")</li>
                        <li>@Html.ActionLink("Request", "Index", "Requests")</li>
                        <li>@Html.ActionLink("User", "Index", "Users")</li>
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                        <li><span style="color:#d8d2d2; align-items:flex-end">@Html.ActionLink("Log Out", "LogOff", "DangNhap")</span></li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "DangNhap", "DangNhap")</li>

                    }

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @if (Session["Account"] != null)
        {
            @RenderBody()
        }
        else
        {
            //Response.Write("<script language='JavaScript'> alert('Bạn phải đăng nhập!'); </script>");

            @Html.ActionLink("Login", "DangNhap", "DangNhap")
        }
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
